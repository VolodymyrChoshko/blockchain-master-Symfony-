{% extends "layout/root.html.twig" %}
{% block body %}
  {% include "admin/blocks/menu.html.twig" %}
<div class="container-fluid card p-2">
  <form method="post">
    <h2 class="card-header mb-2 p-0">{{ title }}</h2>
    <textarea name="html" class="d-block w-100" style="height: 60vh; font-family: monospace; white-space: pre;">{{ html }}</textarea>
    <div class="mt-3">
      <input type="submit" name="action" value="SAVE &amp; BACK" class="btn btn-main mr-1" />
      <input type="submit" name="action" value="SAVE &amp; NEXT" class="btn btn-main mr-1" />
    </div>
  </form>
</div>
{% endblock %}
